
----------------------------------------
INSTALL PREREQUISITES
----------------------------------------

sudo apt-get install -y build-essential freeglut3 freeglut3-dev libglew1.5 libglew1.5-dev libglu1-mesa libglu1-mesa-dev libgl1-mesa-glx libgl1-mesa-dev

----------------------------------------
BUILD
----------------------------------------

gcc -lglut -lGL -lGLU -lGLEW example.cpp -o example


----------------------------------------
RUN
----------------------------------------

./example
